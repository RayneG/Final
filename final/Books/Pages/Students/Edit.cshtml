@model Books.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.ISBN" />
            <div class="form-group">
                <label asp-for="Student.Title" class="control-label"></label>
                <input asp-for="Student.Title" class="form-control" />
                <span asp-validation-for="Student.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Author" class="control-label"></label>
                <input asp-for="Student.Author" class="form-control" />
                <span asp-validation-for="Student.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Copies" class="control-label"></label>
                <input asp-for="Student.Copies" class="form-control" />
                <span asp-validation-for="Student.Copies" class="text-danger"></span>
            </div>
